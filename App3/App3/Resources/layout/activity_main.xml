<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E87373"
    android:minWidth="25px"
    android:minHeight="25px">
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="104.0dp"
            android:id="@+id/linearLayout2">
            <ImageView
                android:src="@drawable/user"
                android:layout_width="match_parent"
                android:layout_height="97.1dp"
                android:minWidth="10px"
                android:minHeight="10px"
                android:id="@+id/imageView1"
                android:paddingTop="20.0dp"
                />


        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="fill_parent"
            android:layout_height="118.1dp"
            android:id="@+id/linearLayout3">



            <EditText
                android:inputType="textPersonName"
                android:layout_width="match_parent"
                android:text="admin"
                android:layout_height="75.6dp"
                android:background="@drawable/CustomEditText"
                android:id="@+id/txtUserName"
                android:padding="16dp"
                android:layout_marginTop="40.0dp"
                android:layout_marginLeft="50.0dp"
                android:layout_marginRight="50.0dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="96.0dp"
            android:id="@+id/linearLayout4">
            <EditText
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:text="admin"
                android:layout_height="75.6dp"
                android:background="@drawable/CustomEditText"
                android:id="@+id/txtPassword"
                android:padding="16dp"
                android:layout_marginTop="10.0dp"
                android:layout_marginLeft="50.0dp"
                android:layout_marginRight="50.0dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="fill_parent"
            android:layout_height="104.4dp"
            android:id="@+id/linearLayout5"
            android:gravity="center">
            <Button
                android:text="SIGN UP"
                android:layout_width="132.8dp"
                android:layout_height="77.6dp"
                app:backgroundTint="#9F3535"
                android:textColor="#ffe8f5e9"
                android:clickable="true"
                android:id="@+id/button2"
                android:textStyle="bold" />
            <Button
                android:text="LOG IN"
                android:layout_width="132.0dp"
                android:layout_height="77.6dp"
                android:id="@+id/button1"
                app:backgroundTint="#9F3535"
                tools:ignXore="XmlErrors"
                android:clickable="false"
                android:textStyle="bold"
                android:layout_marginLeft="33.8dp" 
             />




        </LinearLayout>
        <ImageView
            android:src="@drawable/company"
            android:layout_width="match_parent"
            android:layout_height="140.0dp"
            android:id="@+id/imageView2" />
    </LinearLayout>

    

</RelativeLayout>