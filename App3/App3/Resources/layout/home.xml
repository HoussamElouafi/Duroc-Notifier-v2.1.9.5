<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/relativeLayout1"
    android:background="#E87373">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="681.1dp"
        android:id="@+id/linearLayout1"
        android:layout_marginTop="2.6dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0.0dp"
            android:id="@+id/linearLayout2">
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout3"
            android:minWidth="25px"
            android:minHeight="25px">
            <ImageView
                android:src="@drawable/server_state"
                android:layout_width="match_parent"
                android:layout_height="299.0dp"
                android:id="@+id/imageView1" />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25.0dp"
            android:minHeight="25.0dp"
            android:layout_width="match_parent"
            android:layout_height="171.4dp"
            android:id="@+id/linearLayout4">
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25.0dp"
                android:minHeight="25.0dp"
                android:layout_width="match_parent"
                android:layout_height="182.9dp"
                android:id="@+id/linearLayout6"
                android:layout_marginBottom="0.0dp">
                <TextView
                    android:text="SERVER STATE"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView1"
                    android:textColor="#ff9f3535"
                    android:textStyle="bold"
                    android:layout_marginLeft="50.0dp"
                    android:layout_marginRight="50.0dp"
                    
                 
                    
                    
                />
                <TextView
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="match_parent"
                    android:layout_height="79.6dp"
                    android:id="@+id/serverstate"
                    android:background="#fffb7979"
                    android:textSize="20.0dp"
                    android:layout_margin="25.0dp"
                    android:paddingLeft="50.0dp"
                    android:paddingRight="50.0dp"
                    android:layout_marginRight="30.0dp"
                    android:layout_marginLeft="0.0dp"
                    android:text="CONNECTED" 
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25.0dp"
            android:minHeight="25.0dp"
            android:layout_width="match_parent"
            android:layout_height="84.2dp"
            android:id="@+id/linearLayout5"
            android:layout_marginTop="0.0dp">

            <Button
                android:text="START"
                android:layout_width="match_parent"
                android:layout_height="77.7dp"
                android:id="@+id/btnSend"
                android:clickable="true"
                android:textAllCaps="true"
                app:backgroundTint="#9F3535"
                android:textStyle="normal|bold"
 
              />

        </LinearLayout>
        <Button
            android:text="STOP"
            android:layout_width="match_parent"
            android:layout_height="77.7dp"
            android:id="@+id/btnStop"
            android:clickable="true"
            android:textAllCaps="true"
            app:backgroundTint="#9F3535"
            android:textStyle="normal|bold"/>


    </LinearLayout>
    <TextView
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/linearLayout1"
        android:id="@+id/textView2" />
</RelativeLayout>